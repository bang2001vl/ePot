<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TittleNormalSize">
        <item name="android:textSize">@dimen/normal_title_size_text</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/gilroy_regular</item>
    </style>

    <style name="TittleBigSize" parent="TittleNormalSize">
        <item name="android:textSize">@dimen/big_title_size_text</item>
    </style>

    <style name="TittleSmallSize" parent="TittleNormalSize">
        <item name="android:textSize">@dimen/small_title_size_text</item>
    </style>

    <style name="ContentTextNormal">
        <item name="android:textSize">@dimen/normal_content_size_text</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ImageItem_NormalSize">
        <item name="android:background">@color/light_gray</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="epotButton">
        <item name="android:background">@color/light_gray</item>
        <item name="colorOnBackground">true</item>
    </style>

    <style name="ToolBarIcon">
        <item name="android:layout_width">@dimen/tool_bar_icon_size</item>
        <item name="android:layout_height">@dimen/tool_bar_icon_size</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:scaleX">1</item>
        <item name="android:scaleY">1</item>
    </style>

    <style name="product_ratingbar" parent="Widget.AppCompat.RatingBar">
        <item name="android:minHeight">30px</item>
        <item name="android:maxHeight">30px</item>
        <item name="android:progressDrawable">@drawable/my_rating</item>
    </style>

    <style name="Widget.Theme.EPot.MyView" parent="">
        <item name="android:background">@color/gray_400</item>
        <item name="exampleColor">@color/light_blue_400</item>
    </style>


    <style name="AudioFileInfoOverlayText">
        <item name="android:paddingLeft">4px</item>
        <item name="android:paddingBottom">4px</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">12sp</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="cartButton">
        <item name="android:textSize">@dimen/large_btn_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/btn_red_background</item>
    </style>

    <style name="Dropdown_Country">
    </style>

    <style name="CommonButton" parent="ClickableRoundCorner">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">@dimen/normal_title_size_text</item>
        <item name="android:fontFamily">@font/gilroy_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/btn_red_background</item>
        <item name="backgroundTint">@color/mainColor</item>
        <item name="android:includeFontPadding">false</item>
        <item name="paddingStart">10dp</item>
        <item name="paddingEnd">10dp</item>
    </style>

    <style name="MyCustomTabText">
        <item name="android:textSize">14dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:fontFamily">@font/gilroy_regular</item>
    </style>

    <style name="MyCustomTabText2">
        <item name="android:textSize">22dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:fontFamily">@font/gilroy_regular</item>
    </style>

    <style name="FullScreenDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:padding">0dp</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>

    <style name="CommonTitle">
        <item name="android:background">@color/transparent</item>
        <item name="android:text">@string/Name_Title</item>
        <item name="android:textSize">@dimen/title_common_font_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/gilroy_regular</item>
    </style>

    <style name="ClickableRoundCorner">
        <item name="android:background">@drawable/button_round_background</item>
        <item name="android:backgroundTint">@color/transparent</item>
    </style>

    <style name="ClickableCircle">
        <item name="android:background">@drawable/button_circle_background</item>
        <item name="android:backgroundTint">@color/transparent</item>
    </style>
</resources>
