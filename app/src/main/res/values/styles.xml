<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TittleNormalSize">
        <item name="android:textSize">@dimen/normal_title_size_text</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TittleBigSize" parent="TittleNormalSize">
        <item name="android:textSize">@dimen/big_title_size_text</item>
    </style>
    <style name="TittleSmallSize" parent="TittleNormalSize">
        <item name="android:textSize">@dimen/small_title_size_text</item>
    </style>

    <style name="ContentTextNormal">
        <item name="android:textSize">@dimen/normal_content_size_text</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ImageItem_NormalSize" >
        <item name="android:background">@color/light_gray</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="epotButton">
        <item name="android:background">@color/light_gray</item>
        <item name="colorOnBackground">true</item>
    </style>

    <style name="ToolBarIcon">
        <item name="android:layout_width">@dimen/tool_bar_icon_size</item>
        <item name="android:layout_height">@dimen/tool_bar_icon_size</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:scaleX">1</item>
        <item name="android:scaleY">1</item>
    </style>

</resources>