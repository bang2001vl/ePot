<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/product_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

        <FrameLayout
            android:id="@+id/Tag_Image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/Image_Product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitStart"
                android:src="@mipmap/mango" />

            <exam.nlb2t.epot.Views.Tag_Salepro
                android:id="@+id/Tag_Salepro"
                android:layout_width="match_parent"
                android:layout_height="278dp"
                card_view:Color="#ffff00"
                card_view:Size_tag="50dp"
                card_view:Text="50%"
                card_view:TextColor="#ff0000"
                card_view:TextPadding_Top="30dp"
                card_view:TextSize="23dp"

                />
        </FrameLayout>


    <TextView
        android:id="@+id/textview_proName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Xoài cát nguyên trái, 1KG ship mọi khu vực:V"
        android:textColor="@color/black"
        android:textSize="11pt"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"

        />
        <RelativeLayout
            android:id="@+id/price_amoundsold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <TextView
        android:id="@+id/textview_proPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor = "#F00"
        android:textSize="10pt"
        android:text="đ"
        android:paddingLeft="15dp"
        android:layout_marginTop="12dp"
        />

    <TextView
        android:id="@+id/textview_proSold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor = "#808080"
        android:textSize="9pt"
        android:text="Đã bán"
        android:layout_marginTop="12dp"
        android:gravity="right"
        android:paddingRight="15dp"
        />
        </RelativeLayout>

</LinearLayout>


