<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/product_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

        <FrameLayout
            android:id="@+id/Tag_Image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/Image_Product"
                android:layout_width="208dp"
                android:layout_height="wrap_content"
                android:scaleType="fitStart"
                android:src="@mipmap/mango" />
            <TextView
                android:id="@+id/tv_tag_salepro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30%"
                android:background="#ff4500"
                android:textSize="15pt"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:textColor="@color/white"
                />

        </FrameLayout>

    <TextView
        android:id="@+id/textview_proName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Xoài cát nguyên trái, 1KG ship mọi khu vực:V"
        android:textColor="@color/black"
        android:textSize="11pt"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"

        />
        <RelativeLayout
            android:id="@+id/price_amoundsold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/textview_OldproPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor = "#808080"
                android:textSize="10pt"
                android:text=" đ"
                android:paddingLeft="15dp"
                android:layout_marginTop="12dp"
                />
    <TextView
        android:id="@+id/textview_proPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor = "#F00"
        android:textSize="10pt"
        android:text=" đ"
        android:paddingLeft="15dp"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@+id/textview_OldproPrice"
        />

    <TextView
        android:id="@+id/textview_proSold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor = "#808080"
        android:textSize="9pt"
        android:text="Đã bán"
        android:layout_marginTop="12dp"
        android:gravity="right"
        android:paddingRight="15dp"
        />
        </RelativeLayout>

</LinearLayout>


