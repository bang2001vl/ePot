<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/product_item"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                app:cardCornerRadius="10dp"
                >

                <ImageView
                    android:id="@+id/Image_Product"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_rounded"
                    android:scaleType="centerCrop"
                    android:src="@drawable/sowmi_nam" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_tag_salepro"
                    android:background="@drawable/bg_tag_sale"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="2dp"
                    android:text="@string/Sale"
                    android:textSize="13sp"
                    android:padding="4dp"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    >
                </TextView>

                <android.widget.Button
                    android:id="@+id/Favorite"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="135dp"
                    android:layout_marginTop="140dp"
                    android:background="@drawable/red_favorite_24" />


            </androidx.cardview.widget.CardView>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp">

            <RatingBar
                android:id="@+id/ratingbar"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:rating="3"
                android:progressTint="#FFC107"
                android:stepSize="1" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/TotalCmt"
                android:text="@string/Cmt"
                android:textSize="8sp"
                android:fontFamily="@font/gilroy_medium"
                android:gravity="center"
                android:layout_marginStart="2dp"
                android:visibility="gone"
                />
        </LinearLayout>

        </LinearLayout>
        </FrameLayout>
        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/StoreName"
            android:text="@string/storename"
            android:textSize="@dimen/small_tag_size_text"
            android:textStyle="bold"
            android:textColor="#9B9B9B"
            android:textAlignment="viewStart"
            android:layout_marginStart="3dp"
            android:visibility="gone"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textview_proName"
            android:text="@string/productname"
            android:textSize="12sp"
            android:textColor="#222222"
            android:textAlignment="viewStart"
            android:fontFamily="@font/gilroy_bold"
            android:layout_marginStart="3dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textview_proPrice"
                android:text="@string/new_price"
                android:textSize="12sp"
                android:fontFamily="@font/gilroy_medium"
                android:textColor="#DB3022"
                android:textAlignment="viewStart"
                android:layout_marginTop="2dp"
                android:layout_marginStart="3dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textview_proSold"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:text="@string/Sold"
                android:fontFamily="@font/gilroy_medium"
                android:textAlignment="viewEnd"
                android:textColor="#9B9B9B"
                android:textSize="10sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/textview_OldproPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:text="@string/old_price"
            android:fontFamily="@font/gilroy_medium"
            android:textAlignment="viewStart"
            android:textColor="#9B9B9B"
            android:textSize="12sp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
