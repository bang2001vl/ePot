<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    card_view:cardCornerRadius="40dp"
    card_view:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="3dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingTop="3dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/Image_Product"
            android:layout_width="match_parent"
            android:layout_height="413dp"
            android:scaleType="fitXY"
            android:src="@mipmap/mango" />

    <TextView
        android:id="@+id/textview_proName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Xoài cát nguyên trái 1KG ship mọi khu vực:V"
        android:textColor="@color/black"
        android:textSize="11pt"

        />

    <TextView
        android:id="@+id/textview_proPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor = "#F00"
        android:textSize="12pt"
        android:textStyle="bold"
        android:text="70.000 đ"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/textview_proSold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor = "#808080"
        android:textSize="10pt"
        android:text="Đã bán 1k"
        android:layout_marginTop="5dp"
        />
    </LinearLayout>
</androidx.cardview.widget.CardView>


