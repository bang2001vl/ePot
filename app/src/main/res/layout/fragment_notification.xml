<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NotificationFragment"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/title_bar_background"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:textAlignment="center"
            android:text="@string/menu_notification"
            android:layout_centerInParent="true"
            style="@style/CommonTitle"
            />
    </RelativeLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/contentLayout"
        >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:scrollbarAlwaysDrawHorizontalTrack="false"
            android:scrollbarAlwaysDrawVerticalTrack="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linear_layout_main"
                android:orientation="vertical">

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/recyclerView"
                    >
                </androidx.recyclerview.widget.RecyclerView>
                <!--<exam.nlb2t.epot.NotificationWorkspace.NewBillNotificationView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <exam.nlb2t.epot.NotificationWorkspace.VertifyBillNotificationView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <exam.nlb2t.epot.NotificationWorkspace.SuccessBillNotifyView_Customer
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <exam.nlb2t.epot.NotificationWorkspace.SuccessBillNotifyView_Saler
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:id="@+id/next_button_layout"
                    android:layout_marginTop="5dp"
                    android:background="@color/empty_screen_background"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/watch_more"
                        style="@style/ContentTextNormal"
                        android:layout_centerInParent="true"
                        />
                </RelativeLayout>

            </LinearLayout>

        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>
