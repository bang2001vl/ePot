<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    android:orientation="vertical">
    <LinearLayout
        android:id="@id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:layout_marginBottom="2dp"
            tools:layout_editor_absoluteX="0dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                app:srcCompat="?attr/homeAsUpIndicator" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:autoSizeTextType="uniform"
                android:text="Thêm sản phẩm"
                android:textColor="@color/black" />
        </LinearLayout>

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F0DAD9D9"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="149dp"
                        android:layout_height="31dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:autoSizeTextType="uniform"
                        android:text="Thêm hình ảnh"
                        android:textColor="@color/black" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            app:srcCompat="@android:drawable/ic_menu_gallery" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="15dp"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtName_Product"
                        android:layout_width="149dp"
                        android:layout_height="31dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:autoSizeTextType="uniform"
                        android:text="Tên sản phẩm"
                        android:textColor="@color/black" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/name_Product"
                        android:layout_width="match_parent"
                        android:layout_height="43dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="5dp"
                        android:background="@color/white"
                        android:hint="Nhập tên sản phẩm"
                        android:inputType="textShortMessage" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtInfo_Product"
                        android:layout_width="149dp"
                        android:layout_height="31dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:autoSizeTextType="uniform"
                        android:text="Mô tả sản phẩm"
                        android:textColor="@color/black" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/Info_Product"
                        android:layout_width="match_parent"
                        android:layout_height="43dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="5dp"
                        android:background="@color/white"
                        android:hint="Nhập mô tả sản phẩm"
                        android:inputType="textLongMessage" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="2dp"
                    android:background="@color/light_gray"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginBottom="2dp"
                        android:background="@color/white"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/im_icon"
                            android:layout_width="125dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/ic_baseline_more_vert_24" />

                        <TextView
                            android:id="@+id/danh_muc"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:autoSizeTextType="uniform"
                            android:text="Danh mục"
                            android:textColor="@color/black"
                            android:textSize="14dp" />

                        <ImageView
                            android:id="@+id/imageNext_danh_muc"
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="5dp"
                            android:layout_weight="1"
                            app:srcCompat="@android:drawable/ic_media_play" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginBottom="2dp"
                        android:background="@color/white"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/im_icon6"
                            android:layout_width="125dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/ic_baseline_more_vert_24" />

                        <TextView
                            android:id="@+id/textView_thuong_hieu"
                            android:layout_width="200dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1"
                            android:autoSizeTextType="uniform"
                            android:text="Thương hiệu"
                            android:textColor="@color/black" />

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editText_tradeMark"
                            android:layout_width="320dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="9dp"
                            android:layout_marginEnd="15dp"
                            android:layout_weight="1"
                            android:autoSizeTextType="uniform"
                            android:background="@color/white"
                            android:ems="10"
                            android:gravity="right"
                            android:hint="Đặt"
                            android:inputType="textShortMessage" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginBottom="2dp"
                        android:background="@color/white"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/im_icon7"
                            android:layout_width="125dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/ic_baseline_more_vert_24" />

                        <TextView
                            android:id="@+id/textView_origin"
                            android:layout_width="200dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1"
                            android:autoSizeTextType="uniform"
                            android:text="Nguồn gốc"
                            android:textColor="@color/black"
                            android:textSize="14dp" />

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editText_Origin"
                            android:layout_width="320dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="9dp"
                            android:layout_marginEnd="15dp"
                            android:layout_weight="1"
                            android:autoSizeTextType="uniform"
                            android:background="@color/white"
                            android:ems="10"
                            android:gravity="right"
                            android:hint="Đặt"
                            android:inputType="textLongMessage" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginBottom="2dp"
                        android:background="@color/white"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/im_icon2"
                            android:layout_width="125dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/ic_baseline_more_vert_24" />

                        <TextView
                            android:id="@+id/Price"
                            android:layout_width="200dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1"
                            android:autoSizeTextType="uniform"
                            android:text="Giá"
                            android:textColor="@color/black" />

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editTextNumberPrice"
                            android:layout_width="320dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="15dp"
                            android:layout_weight="1"
                            android:autoSizeTextType="uniform"
                            android:background="@color/white"
                            android:ems="10"
                            android:gravity="right"
                            android:hint="Đặt"
                            android:inputType="numberDecimal" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginBottom="2dp"
                        android:background="@color/white"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/im_icon3"
                            android:layout_width="125dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/ic_baseline_more_vert_24" />

                        <TextView
                            android:id="@+id/textViewNumberProduct"
                            android:layout_width="200dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1"
                            android:autoSizeTextType="uniform"
                            android:text="Kho hàng"
                            android:textColor="@color/black" />

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editTextNumberProduct"
                            android:layout_width="320dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="15dp"
                            android:layout_weight="1"
                            android:autoSizeTextType="uniform"
                            android:background="@color/white"
                            android:ems="10"
                            android:gravity="right"
                            android:hint="Đặt"
                            android:inputType="numberDecimal" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:id="@+id/LinearLayoutBottom"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent">


            <ToggleButton
                android:id="@+id/toggleButtonSave"
                android:layout_width="10dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:clickable="false"
                android:text="ToggleButton"
                android:textOff="Lưu"
                android:textOn="Lưu" />

            <ToggleButton
                android:id="@+id/toggleButtonShow"
                android:layout_width="10dp"
                android:layout_height="40dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:clickable="false"
                android:text="ToggleButton"
                android:textOff="Hiển thị"
                android:textOn="Hiển thị" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>