<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".EmptyBagFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="70dp"
        >
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/shoppingbag"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hông có gì trong giỏ hết."
            android:textSize="22dp"
            android:textColor="#363434"
            android:layout_marginTop="30dp"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lướt Epot ngay thôi!"
            android:fontFamily="@font/gilroy_light"
            android:textSize="18dp"
            android:textColor="#363434"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal"/>
        <!--<Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/epot_btn_bg"
            android:text="Mua sắm ngay"
            android:textColor="@color/white"
            android:fontFamily="@font/gilroy_bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:stateListAnimator="@null"/>-->
    </LinearLayout>

</RelativeLayout>
