<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/white"
    android:padding="10dp"
    >
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cb_choose_item"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="@id/image_item"
        app:layout_constraintBottom_toBottomOf="@id/image_item"
        app:layout_constraintStart_toStartOf="parent"
        android:minWidth="0dp"
        />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnRemoveItem"
        android:src="@mipmap/icon_clear_32"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/transparent"
        android:scaleX="0.6"
        android:scaleY="0.6"
        />
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/image_item"
        style="@style/ImageItem_NormalSize"
        android:layout_gravity="center_vertical"
        android:src="@mipmap/mango"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/cb_choose_item"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtName_item"
        android:text="@string/default_product_name"
        style="@style/TittleBigSize"
        android:textSize="25dp"
        app:layout_constraintTop_toTopOf="@id/image_item"
        app:layout_constraintStart_toEndOf="@id/image_item"
        android:layout_marginStart="@dimen/normal_padding"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/price_origin"
        android:text="@string/default_price_strike"
        android:textSize="@dimen/normal_content_size_text"
        android:textColor="@color/red"
        app:layout_constraintTop_toBottomOf="@id/txtName_item"
        app:layout_constraintStart_toStartOf="@id/txtName_item"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/price_current"
        android:text="@string/default_price"
        android:textSize="@dimen/normal_title_size_text"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/price_origin"
        app:layout_constraintBottom_toBottomOf="@id/price_origin"
        app:layout_constraintStart_toEndOf="@id/price_origin"
        android:layout_marginStart="@dimen/normal_padding"
        />
        <exam.nlb2t.epot.Views.NumberPickerView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/amount_picker"
            app:button_size="@dimen/normal_button_size"
            app:minValue="1"
            app:maxValue="10"
            app:stepValue="1"
            app:src_increase="@mipmap/ic_plus"
            app:src_decrease="@mipmap/ic_minus"
            android:layout_gravity="end"

            android:scaleX="0.8"
            android:scaleY="0.8"

            app:layout_constraintTop_toBottomOf="@id/price_current"
            app:layout_constraintStart_toEndOf="@id/image_item"
            />
</androidx.constraintlayout.widget.ConstraintLayout>