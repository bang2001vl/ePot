<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.CartFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scrollbars="vertical"
            android:nestedScrollingEnabled="true"
            android:background="@color/drark_gray"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/saler_layout_holder"
                android:divider="@color/black"
                android:dividerPadding="20dp"
                android:showDividers="beginning"
                android:animateLayoutChanges="true"
                >
            </LinearLayout>

        </ScrollView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_total_money_title"
                android:text="@string/total_money_2dot"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                style="@style/TittleNormalSize"
                android:textSize="@dimen/normal_content_size_text"
                android:layout_margin="@dimen/normal_padding"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_total_money"
                android:text="1000000000 VND"
                android:textColor="@color/red"
                app:layout_constraintBottom_toBottomOf="@id/txt_total_money_title"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="@dimen/normal_padding"
                style="@style/TittleNormalSize"
                />
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/button_purchase"
                android:text="@string/purcharse"
                android:textSize="13dp"
                android:backgroundTint="@color/red"
                android:layout_marginTop="@dimen/normal_padding"
                android:layout_marginEnd="@dimen/normal_padding"
                android:layout_marginStart="@dimen/normal_padding"
                app:layout_constraintTop_toBottomOf="@id/txt_total_money_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</FrameLayout>