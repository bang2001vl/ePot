<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp">

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/gif_complete_payment"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:src="@drawable/gif_payment_success"
            app:layout_constraintBottom_toTopOf="@+id/complete_payment_txt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"/>

        <TextView
            android:id="@+id/complete_payment_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="0dp"
            android:fontFamily="@font/gilroy_bold"
            android:text="@string/complete_payment"
            android:textColor="@color/black"
            android:textSize="30dp"
            app:layout_constraintBottom_toTopOf="@+id/complete_payment_txt2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/gif_complete_payment"
            app:layout_constraintVertical_chainStyle="packed"/>

        <TextView
            android:id="@+id/complete_payment_txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/complete_payment2"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textAlignment="center"
            app:layout_constraintBottom_toTopOf="@+id/complete_payment_txt3"
            app:layout_constraintEnd_toEndOf="@id/complete_payment_txt"
            app:layout_constraintStart_toStartOf="@id/complete_payment_txt"
            app:layout_constraintTop_toBottomOf="@+id/complete_payment_txt"
            app:layout_constraintVertical_chainStyle="packed"/>

        <TextView
            android:id="@+id/complete_payment_txt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/complete_payment3"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toTopOf="@id/btn_completete_payment"
            app:layout_constraintEnd_toEndOf="@id/complete_payment_txt2"
            app:layout_constraintStart_toStartOf="@id/complete_payment_txt2"
            app:layout_constraintTop_toBottomOf="@+id/complete_payment_txt2"
            app:layout_constraintVertical_chainStyle="packed"/>

        <Button
            android:id="@+id/btn_completete_payment"
            style="@style/CommonButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:stateListAnimator="@null"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/gilroy_bold"
            android:text="@string/btn_complete_payment"
            android:layout_marginTop="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
