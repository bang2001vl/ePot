        <Button
            android:id="@+id/button_more_product_new"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_gravity="center_horizontal|center_vertical"
            android:text="More" />
        </LinearLayout>
