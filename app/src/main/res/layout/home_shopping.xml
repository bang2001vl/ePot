        <androidx.appcompat.widget.SearchView
            android:id="@+id/searchBar"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginHorizontal="20dp"
            app:defaultQueryHint="@string/find"
            android:background="@drawable/border_searchview"
            app:queryHint="@string/Search" />
    </LinearLayout>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <com.emilsjolander.components.StickyScrollViewItems.StickyScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/sticky_scroll_view">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    app:cardCornerRadius="15dp"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="121dp"

                        android:src="@mipmap/banner"
                        android:scaleType="centerCrop"
                        android:background="@drawable/border_textview"
                        />
                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="bottom"
                        android:text="@string/Category"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginTop="10dp"
                        android:textColor="#DB3022"
                        android:textSize="22dp"
                        android:fontFamily="@font/gilroy_bold"
                        android:textStyle="bold" />
                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/recycleViewCategory"
                        android:padding="2dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:orientation="horizontal"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        app:spanCount="1"
                        tools:listitem="@layout/category_tab">
                    </androidx.recyclerview.widget.RecyclerView>
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:background="@color/white"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:tag="sticky">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Selling"
                        android:textSize="22dp"
                        android:textStyle="bold"
                        android:textColor="#DB3022"
                        android:layout_marginHorizontal="10dp"
                        android:fontFamily="@font/gilroy_bold"
                        android:layout_centerVertical="true"
                        />
                    <ImageButton
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:scaleType="fitCenter"
                        android:id="@+id/buttonRefesh_topSold"
                        android:background="@drawable/button_circle_background"
                        android:backgroundTint="#00000000"
                        android:src="@drawable/ic_baseline_refresh_24"
                        android:backgroundTintMode="add"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="10dp"
                        android:layout_centerVertical="true"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:minHeight="300dp"
                        android:nestedScrollingEnabled="false"
                        android:id="@+id/fragment_product_top_sold">
                    </androidx.recyclerview.widget.RecyclerView>
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/titleLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:tag="sticky">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal"
                        android:background="@color/white"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/title_new_product"
                            android:text="@string/Suggestion"
                            android:textSize="22dp"
                            android:textStyle="bold"
                            android:textColor="#DB3022"
                            android:layout_marginHorizontal="10dp"
                            android:fontFamily="@font/gilroy_bold"
                            android:layout_centerVertical="true"
                            />
                        <ImageButton
                            android:layout_width="27dp"
                            android:layout_height="27dp"
                            android:scaleType="fitCenter"
                            android:id="@+id/buttonRefesh_new"
                            android:background="@drawable/button_circle_background"
                            android:backgroundTint="@color/transparent"
                            android:src="@drawable/ic_baseline_refresh_24"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="10dp"
                            android:backgroundTintMode="add"
                            />
                    </RelativeLayout>
                </LinearLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="300dp"
                    android:nestedScrollingEnabled="false"
                    android:id="@+id/fragment_product_new">
                </androidx.recyclerview.widget.RecyclerView>

            </LinearLayout>
        </com.emilsjolander.components.StickyScrollViewItems.StickyScrollView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/gif_loading_circle"
            android:background="@color/white"
            android:layout_gravity="center_horizontal"
            app:layout_anchor="@id/sticky_scroll_view"
            app:layout_anchorGravity="bottom|center_horizontal">
            <pl.droidsonroids.gif.GifImageView
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:src="@drawable/loading_image"
                android:scaleX="2.7"
                android:scaleY="2.7"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</LinearLayout>
