<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tool_bar_saler"
        android:orientation="horizontal"
        android:background="@color/light_gray">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_shop"
            android:layout_gravity="center"
            android:layout_margin="@dimen/normal_padding"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/saler_name"
            android:text="@string/default_product_name"
            android:layout_gravity="center"
            style="@style/TittleNormalSize"
            />
        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_more_saler"
            android:src="@drawable/ic_baseline_more_vert_24"
            android:background="@color/transparent"
            android:scaleType="center"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/normal_padding"
            />
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:id="@+id/linearLayout"
            android:background="@color/drark_gray"
            android:showDividers="beginning"
            android:dividerPadding="2dp"
            android:animateLayoutChanges="true"
            >
        </LinearLayout>

</LinearLayout>