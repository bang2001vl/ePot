<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_rounded"

    tools:context=".ChangePasswordFragment">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_home_indicator"
        android:layout_marginTop="20dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Đổi mật khẩu"
        android:textColor="@color/black"
        android:fontFamily="@font/gilroy_bold"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"/>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginHorizontal="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mật khẩu cũ"
        android:textColorHint="#9B9B9B"
        app:endIconMode="password_toggle"
        app:endIconTint="#9B9B9B">


    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/et_OldPass"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fontFamily="@font/gilroy_light"
        android:inputType="textPassword"
        android:textColor="@color/black"
        android:paddingVertical="25dp"
        android:paddingHorizontal="30dp"
        android:text=""
        android:background="@drawable/edittext_blur_background"/>
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btn_forgotPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:text="Quên mật khẩu?"
        android:textSize="14dp"
        android:background="?selectableItemBackground"
        android:layout_gravity="right"
        android:fontFamily="@font/gilroy_light"
        android:layout_marginVertical="5dp"
        android:layout_marginEnd="20dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginHorizontal="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mật khẩu mới"
        android:textColorHint="#9B9B9B"
        app:endIconMode="password_toggle"
        app:endIconTint="#9B9B9B">


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/newPass"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/gilroy_light"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:paddingVertical="25dp"
            android:paddingHorizontal="30dp"
            android:text=""
            android:background="@drawable/edittext_blur_background"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginHorizontal="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Xác nhận mật khẩu"
        android:textColorHint="#9B9B9B"
        app:endIconMode="password_toggle"
        app:endIconTint="#9B9B9B">


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/rePass"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/gilroy_light"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:paddingVertical="25dp"
            android:paddingHorizontal="30dp"
            android:text=""
            android:background="@drawable/edittext_blur_background"/>
    </com.google.android.material.textfield.TextInputLayout>
    <Button
        android:id="@+id/btn_SavePass"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/epot_btn_bg"
        android:textSize="20dp"
        android:fontFamily="@font/gilroy_bold"
        android:text="Lưu mật khẩu"
        android:padding="10dp"
        android:stateListAnimator="@null"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:textColor="@color/white"/>
</LinearLayout>