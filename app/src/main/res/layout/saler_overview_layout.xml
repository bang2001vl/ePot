<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/avt_saler_product_detail"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/profile_user"
        android:layout_marginVertical="10dp"
        android:layout_marginLeft="10dp"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toEndOf="@id/avt_saler_product_detail"
        app:layout_constraintEnd_toStartOf="@id/btn_more_saler_product_detail"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gilroy_regular"
            android:text="@string/provide_by"
            android:textColor="@color/black"
            android:layout_marginStart="2dp"
            android:layout_below="@id/txt_saler_name_product_detail"
            android:layout_toEndOf="@id/avt_saler_product_detail"
            />
        <TextView
            android:id="@+id/txt_saler_name_product_detail"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:textSize="18dp"
            android:text="Thủy Tiên" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_username_saler_product_detail"
            android:fontFamily="@font/gilroy_regular"
            android:text="thuytien192"
            android:layout_below="@id/txt_saler_name_product_detail"
            android:layout_toEndOf="@id/avt_saler_product_detail"
            />
    </LinearLayout>

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/btn_more_saler_product_detail"
        android:src="@drawable/ic_back_arrow"
        android:scaleType="center"
        android:layout_marginStart="10dp"
        android:tint="@color/black"
        android:backgroundTint="@color/transparent"
        android:background="@drawable/button_circle_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="5dp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E2E2E2"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E2E2E2"
        app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
