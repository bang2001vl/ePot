<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:paddingStart="5dp"
    android:paddingEnd="5dp"
    >
    <exam.nlb2t.epot.Views.Title_View
        android:id="@+id/title_payment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:TitleName="Đánh giá chi tiết"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <exam.nlb2t.epot.ProductDetail.Rating.ProductRatingView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rating_chart"
        android:layout_marginBottom="10dp"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/scroll_view_main"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/recyclerView"
                android:nestedScrollingEnabled="false"
                tools:itemCount="10"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/rating_comment_layout"
                />
        </RelativeLayout>

    </ScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/gif_loading_circle"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <pl.droidsonroids.gif.GifImageView
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:src="@drawable/loading_image"
            android:scaleX="2.7"
            android:scaleY="2.7"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>
</LinearLayout>
