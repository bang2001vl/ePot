<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/vertical_scrollview_product_detail"
        android:orientation="vertical"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.viewpager.widget.ViewPager
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/viewpaper_product_detail"
                app:layout_constraintTop_toTopOf="parent"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:layout_constraintTop_toTopOf="parent">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:id="@+id/product_image_item"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/template_product_image"
                    />
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  1/10  "
                    android:background="@drawable/background_round_corner"
                    android:backgroundTint="@color/drark_gray"
                    android:textColor="@color/white"
                    android:layout_alignBottom="@id/product_image_item"
                    android:layout_alignEnd="@id/product_image_item"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    />
            </RelativeLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <ImageButton
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:id="@+id/btn_back_from_product_detail"
        android:src="@mipmap/icon_back_figma_28x28"
        android:scaleType="center"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:tint="@color/black"
        android:background="@drawable/button_circle_background"
        app:layout_constraintTop_toTopOf="@id/vertical_scrollview_product_detail"
        app:layout_constraintStart_toStartOf="@id/vertical_scrollview_product_detail"
        />
</androidx.constraintlayout.widget.ConstraintLayout>