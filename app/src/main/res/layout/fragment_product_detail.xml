<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/vertical_scrollview_product_detail"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/layout_buttons_product_detail"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <androidx.viewpager.widget.ViewPager
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/viewpaper_product_detail"
                app:layout_constraintTop_toTopOf="parent"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:id="@+id/product_image_item"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@mipmap/template_product_image"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_number_viewpaper_product_detail"
                android:text="  1/10  "
                android:background="@drawable/background_round_corner"
                android:backgroundTint="@color/drark_gray"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="@id/product_image_item"
                app:layout_constraintEnd_toEndOf="@id/product_image_item"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                />
            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ratingbar_overview_product_detail"
                style="@style/Widget.AppCompat.RatingBar.Small"
                app:layout_constraintStart_toStartOf="@id/product_image_item"
                app:layout_constraintTop_toBottomOf="@id/txt_number_viewpaper_product_detail"
                android:layout_marginStart="10dp"
                android:rating="4.5"
                android:progressTint="#FFC107"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_rating_count_overview_product_detail"
                app:layout_constraintTop_toTopOf="@id/ratingbar_overview_product_detail"
                app:layout_constraintBottom_toBottomOf="@id/ratingbar_overview_product_detail"
                app:layout_constraintStart_toEndOf="@id/ratingbar_overview_product_detail"
                android:layout_marginStart="10dp"
                android:text="(18)"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_product_name_product_detail"
                android:text="Product's Dummy name"
                android:fontFamily="@font/gilroy_medium"
                android:textSize="24sp"
                style="@style/TittleNormalSize"
                android:layout_marginHorizontal="5dp"
                app:layout_constraintStart_toStartOf="@id/product_image_item"
                app:layout_constraintTop_toBottomOf="@id/ratingbar_overview_product_detail"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/layout_price_product_detail"
                android:orientation="horizontal"
                android:layout_marginTop="1dp"
                app:layout_constraintTop_toBottomOf="@id/txt_product_name_product_detail"
                app:layout_constraintStart_toStartOf="@id/txt_product_name_product_detail"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_price_normal_product_detail"
                    android:text="@string/default_price"
                    android:textSize="20sp"
                    style="@style/ContentTextNormal"
                    android:fontFamily="@font/gilroy_bold"
                    android:layout_marginEnd="5dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_price_sale_product_detail"
                    android:text="@string/default_price_strike"
                    style="@style/TittleSmallSize"
                    android:fontFamily="@font/gilroy_bold"
                    android:textColor="@color/red"
                    android:layout_marginEnd="5dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" | "
                    style="@style/ContentTextNormal"
                    android:fontFamily="@font/gilroy_bold"
                    android:layout_marginEnd="5dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/saled_already"
                    style="@style/ContentTextNormal"
                    android:layout_marginEnd="5dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"
                    style="@style/ContentTextNormal"
                    android:fontFamily="@font/gilroy_bold"
                    android:layout_marginEnd="5dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_saled_already_product_detail"
                    android:text="1000"
                    style="@style/ContentTextNormal"
                    android:layout_marginEnd="5dp"
                    />
            </LinearLayout>
            <CheckBox
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:id="@+id/button_favourite_product_detail"
                android:checked="false"
                android:button="@drawable/button_favourite"
                android:buttonTint="@color/pink"
                app:layout_constraintTop_toTopOf="@id/layout_price_product_detail"
                app:layout_constraintEnd_toEndOf="parent"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/layout_saler_product_detail"
                app:layout_constraintTop_toBottomOf="@id/button_favourite_product_detail"
                android:padding="5dp"
                >
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/avt_saler_product_detail"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/test"
                    android:layout_marginVertical="10dp"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:id="@+id/txt_saler_name_product_detail"
                    android:fontFamily="@font/gilroy_bold"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="20dp"
                    android:layout_toEndOf="@+id/avt_saler_product_detail"
                    android:textSize="20dp"
                    android:text="Thủy Tiên" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_username_saler_product_detail"
                    android:fontFamily="@font/gilroy_regular"
                    android:text="thuytien192"
                    android:layout_below="@id/txt_saler_name_product_detail"
                    android:layout_toEndOf="@id/avt_saler_product_detail"
                    android:layout_marginStart="22dp"/>
                <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/btn_more_saler_product_detail"
                    android:src="@drawable/ic_back_arrow"
                    android:scaleType="center"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:tint="@color/black"
                    android:backgroundTint="@color/light_gray"
                    android:background="@drawable/button_circle_background"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="5dp"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="#E2E2E2"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentTop="true"
                    android:background="#E2E2E2"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/layout_description_product_detail"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/layout_saler_product_detail"
                android:paddingHorizontal="5dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/title_description_product_detail"
                    android:text="Chi tiết sản phẩm"
                    android:fontFamily="@font/gilroy_light"
                    style="@style/TittleNormalSize"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_description_product_detail"
                    android:textColor="@color/black"
                    android:text="Kho: 45\nThương hiệu:  no brand\nChất liệu:  cotton\nXuất xứ: Việt Nam
\nGửi từ: quận tân bình, tp.Hồ Chí Minh\n--------------------------------------------------------------------------------
\nGel lột hút mụn than tre hoạt tính IRC dạng mặt nạ hủ nắp bạc 50g
\n\nSẢN PHẨM ĐƯỢC SẢN XUẤT TỪ CÔNG TY DƯỢC ĐÔNG MINH\nChúng tôi cam kết:"
                    android:maxLines="10"
                    android:padding="5dp"
                    android:fontFamily="@font/gilroy_light"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_more_description_product_detail"
                    android:textColor="@color/red"
                    android:text="Xem thêm"
                    android:layout_gravity="center_horizontal"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/layout_rating_product_detail"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/layout_description_product_detail"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đánh giá"
                    style="@style/TittleNormalSize"
                    />
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:id="@+id/layout_rating_overview_product_detail"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txt_rating_average_product_detail"
                        android:text="4.3"
                        android:textColor="@color/black"
                        android:textSize="50sp"
                        android:layout_marginBottom="30dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txt_rating_count_product_detail"
                        android:text="8 đánh giá"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        app:layout_constraintTop_toBottomOf="@id/txt_rating_average_product_detail"
                        app:layout_constraintStart_toStartOf="@id/txt_rating_average_product_detail"
                        app:layout_constraintEnd_toEndOf="@id/txt_rating_average_product_detail"
                        />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        app:layout_constraintStart_toEndOf="@id/txt_rating_count_product_detail"
                        app:layout_constraintEnd_toEndOf="parent"
                        >
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:layout_gravity="end"
                            >
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:src="@mipmap/rating_5_star"
                                />
                            <SeekBar
                                android:layout_width="200dp"
                                android:layout_height="match_parent"
                                android:id="@+id/seekbar_rating_count_5_star_product_detail"
                                android:progress="100"
                                android:progressTint="#FFC107"
                                android:progressBackgroundTint="@color/transparent"
                                android:background="@color/transparent"
                                android:scaleY="3"
                                android:layout_gravity="center_vertical"
                                android:thumb="@color/transparent"
                                />
                            <TextView
                                android:layout_width="40dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/txt_rating_count_5_star_product_detail"
                                android:text="10"
                                android:textAlignment="center"
                                android:layout_gravity="center"
                                android:textColor="@color/black"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:layout_gravity="end"
                            >
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:src="@mipmap/rating_4_star"
                                />
                            <SeekBar
                                android:layout_width="200dp"
                                android:layout_height="match_parent"
                                android:id="@+id/seekbar_rating_count_4_star_product_detail"
                                android:progress="30"
                                android:progressTint="#FFC107"
                                android:progressBackgroundTint="@color/transparent"
                                android:background="@color/transparent"
                                android:scaleY="3"
                                android:layout_gravity="center_vertical"
                                android:thumb="@color/transparent"
                                />
                            <TextView
                                android:layout_width="40dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/txt_rating_count_4_star_product_detail"
                                android:text="3"
                                android:textAlignment="center"
                                android:layout_gravity="center"
                                android:textColor="@color/black"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:layout_gravity="end"
                            >
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:src="@mipmap/rating_3_star"
                                />
                            <SeekBar
                                android:layout_width="200dp"
                                android:layout_height="match_parent"
                                android:id="@+id/seekbar_rating_count_3_star_product_detail"
                                android:progress="10"
                                android:progressTint="#FFC107"
                                android:progressBackgroundTint="@color/transparent"
                                android:background="@color/transparent"
                                android:scaleY="3"
                                android:layout_gravity="center_vertical"
                                android:thumb="@color/transparent"
                                />
                            <TextView
                                android:layout_width="40dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/txt_rating_count_3_star_product_detail"
                                android:text="1"
                                android:textAlignment="center"
                                android:layout_gravity="center"
                                android:textColor="@color/black"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:layout_gravity="end"
                            >
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:src="@mipmap/rating_2_star"
                                />
                            <SeekBar
                                android:layout_width="200dp"
                                android:layout_height="match_parent"
                                android:id="@+id/seekbar_rating_count_2_star_product_detail"
                                android:progress="20"
                                android:progressTint="#FFC107"
                                android:progressBackgroundTint="@color/transparent"
                                android:background="@color/transparent"
                                android:scaleY="3"
                                android:layout_gravity="center_vertical"
                                android:thumb="@color/transparent"
                                />
                            <TextView
                                android:layout_width="40dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/txt_rating_count_2_star_product_detail"
                                android:text="2"
                                android:textAlignment="center"
                                android:layout_gravity="center"
                                android:textColor="@color/black"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:layout_gravity="end"
                            >
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:src="@mipmap/rating_1_star"
                                />
                            <SeekBar
                                android:layout_width="200dp"
                                android:layout_height="match_parent"
                                android:id="@+id/seekbar_rating_count_1_star_product_detail"
                                android:progress="20"
                                android:progressTint="#FFC107"
                                android:progressBackgroundTint="@color/transparent"
                                android:scaleY="3"
                                android:layout_gravity="center_vertical"
                                android:thumb="@color/transparent"
                                />
                            <TextView
                                android:layout_width="40dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/txt_rating_count_1_star_product_detail"
                                android:text="2"
                                android:textAlignment="center"
                                android:layout_gravity="center"
                                android:textColor="@color/black"
                                />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/layout_rating_comment_product_layout"
                    >
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:id="@+id/avt_customer_comment_rating"
                        android:src="@drawable/test"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="15dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txt_customer_name_comment_rating"
                        android:fontFamily="@font/gilroy_bold"
                        android:textColor="@color/black"
                        android:text="Thủy Tiên"
                        app:layout_constraintTop_toTopOf="@id/avt_customer_comment_rating"
                        app:layout_constraintBottom_toBottomOf="@id/avt_customer_comment_rating"
                        app:layout_constraintStart_toEndOf="@id/avt_customer_comment_rating"
                        android:layout_marginStart="20dp"
                        android:layout_marginBottom="10dp"
                        />
                    <RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/ratingbar_comment_rating"
                        style="@style/Widget.AppCompat.RatingBar.Small"
                        app:layout_constraintTop_toBottomOf="@id/txt_customer_name_comment_rating"
                        app:layout_constraintStart_toStartOf="@id/txt_customer_name_comment_rating"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txt_date_comment_rating"
                        android:text="21/11/2021"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="30dp"
                        android:layout_marginEnd="10dp"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/txt_content_comment_rating"
                        android:textColor="@color/black"
                        android:fontFamily="@font/gilroy_light"
                        android:text="Mụn đầu đen mới thì mới ra nha các bác, còn mụn lâu năm thì phải cạy ra rồi chứ cái nào hút cho nổi. Mụn cám gạo thì ra sạch. Sản phẩm ookk. giá mắc hơn các sp khác chút đá tiềngn"
                        app:layout_constraintStart_toStartOf="@id/txt_customer_name_comment_rating"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/avt_customer_comment_rating"
                        android:layout_marginTop="5dp"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/layout_rating_comment_product_layout2"
                    >
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:id="@+id/avt_customer_comment_rating2"
                        android:src="@drawable/test"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="15dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txt_customer_name_comment_rating2"
                        android:fontFamily="@font/gilroy_bold"
                        android:textColor="@color/black"
                        android:text="Thủy Tiên"
                        app:layout_constraintTop_toTopOf="@id/avt_customer_comment_rating2"
                        app:layout_constraintBottom_toBottomOf="@id/avt_customer_comment_rating2"
                        app:layout_constraintStart_toEndOf="@id/avt_customer_comment_rating2"
                        android:layout_marginStart="20dp"
                        android:layout_marginBottom="10dp"
                        />
                    <RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/ratingbar_comment_rating2"
                        style="@style/Widget.AppCompat.RatingBar.Small"
                        app:layout_constraintTop_toBottomOf="@id/txt_customer_name_comment_rating2"
                        app:layout_constraintStart_toStartOf="@id/txt_customer_name_comment_rating2"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txt_date_comment_rating2"
                        android:text="21/11/2021"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="30dp"
                        android:layout_marginEnd="10dp"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/txt_content_comment_rating2"
                        android:textColor="@color/black"
                        android:fontFamily="@font/gilroy_light"
                        android:text="Mụn đầu đen mới thì mới ra nha các bác, còn mụn lâu năm thì phải cạy ra rồi chứ cái nào hút cho nổi. Mụn cám gạo thì ra sạch. Sản phẩm ookk. giá mắc hơn các sp khác chút đá tiềngn"
                        app:layout_constraintStart_toStartOf="@id/txt_customer_name_comment_rating2"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/avt_customer_comment_rating2"
                        android:layout_marginTop="5dp"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_more_comment_rating"
                    android:textColor="@color/red"
                    android:text="Xem thêm"
                    android:layout_gravity="center_horizontal"
                    />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <ImageButton
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:id="@+id/btn_back_from_product_detail"
        android:src="@mipmap/icon_back_figma_28x28"
        android:scaleType="center"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:tint="@color/black"
        android:backgroundTint="@color/light_gray"
        android:background="@drawable/button_circle_background"
        app:layout_constraintTop_toTopOf="@id/vertical_scrollview_product_detail"
        app:layout_constraintStart_toStartOf="@id/vertical_scrollview_product_detail"
        />
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/layout_buttons_product_detail"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="horizontal"
        android:padding="5dp"
        >
        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />
        <Button
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:text="Thêm vào giỏ"
