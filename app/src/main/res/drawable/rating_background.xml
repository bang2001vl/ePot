<?xml version="1.0" encoding="utf-8"?>
<selector  xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:topLeftRadius="@dimen/radius_rating_background"
                        android:topRightRadius="@dimen/radius_rating_background"/>
                    <stroke android:color="@color/black"
                        android:width="1dp"/>
                    <solid android:color="#f5f5f5f5"/>
                </shape>
            </item>
            <item android:width="40dp" android:id="@+id/test"
                android:height="8dp"
                android:top="20dp"
                android:gravity="center_horizontal">
                <shape android:shape="rectangle">
                    <stroke android:width="1dp"/>
                    <corners android:radius="50dp"/>
                    <solid android:color="@color/transparent"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>