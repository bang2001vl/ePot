<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/corner_radius" />
                    <stroke
                        android:width="@dimen/corner_thin"
                        android:color="@color/ashgray" />
                    <solid android:color="#990000"/>
                    <size
                        android:width="@dimen/corner_size"
                        android:height="@dimen/corner_size"/>
                </shape>
            </item>
            <item android:drawable="@drawable/ic_tick"
                android:height="@dimen/corner_size"
                android:width="@dimen/corner_size"
                />
        </layer-list>

    </item>
</selector>