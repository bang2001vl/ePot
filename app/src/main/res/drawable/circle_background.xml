<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <gradient android:angle="0"
                        android:endColor="#f0f0f0f0" android:startColor="#f5f5f5f5"/>
                    <corners android:radius="@dimen/corner_size" />
                    <padding android:bottom="4dp" android:left="0dp"
                        android:right="2dp" android:top="0dp" />
                </shape>
            </item>
            <item>
                <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="oval">
                    <corners android:radius="@dimen/corner_size"/>
                    <size android:width="@dimen/corner_size"
                        android:height="@dimen/corner_size"/>
                    <solid android:color="#ffffff"/>
<!--                    <stroke android:width="1dp" android:color="#f0f0f0f0"/>-->
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
